<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#E3E3E0"
    android:layout_height="match_parent"
    tools:context=".ui.customer.ViewDetailCustomer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarINCus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60BA62"
        app:titleTextColor="@color/white"
        app:title="Thông tin khách hàng"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_person"
        app:civ_border_width="1dp"
        app:civ_border_color="#FF000000"
        android:layout_width="96dp"
        android:layout_height="96dp"/>

    <TextView
        android:id="@+id/addImgA"
        android:textColor="#0079CA"
        android:layout_gravity="center"
        android:text="Thêm ảnh đại diện"
        android:textSize="18sp"
        android:fontFamily="@font/lato_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bk_them">

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tên khách hàng"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"
                android:id="@+id/edTenKH"
                android:layout_marginLeft="10dp"
                android:hint="Tên khách hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Địa chỉ"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginStart="75dp"
                android:focusableInTouchMode="false"
                android:id="@+id/edDC"
                android:layout_marginLeft="10dp"
                android:hint="Địa chỉ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Điện thoại"
                android:textSize="18sp"
                android:fontFamily="@font/lato_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_marginStart="48dp"
                android:focusableInTouchMode="false"
                android:inputType="phone"
                android:id="@+id/edSDT"
                android:layout_marginLeft="10dp"
                android:hint="Điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:text="1"
            android:textColor="#ffffff"
            android:id="@+id/makh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/buttonXoaCus"
            android:textColor="@color/white"
            android:background="@drawable/button_dn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xóa" />


    </LinearLayout>

</LinearLayout>