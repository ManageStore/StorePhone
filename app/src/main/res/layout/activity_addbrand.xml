<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3E0"
    android:orientation="vertical"
    tools:context=".ui.goods.AddProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60BA62"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Thêm hãng điện thoại" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#E3E3E0"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="20dp"
            android:id="@+id/image_brand"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_phone"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/addhangImg"
            android:textColor="#60BA62"
            android:layout_gravity="center"
            android:text="@string/addImage"
            android:textSize="18sp"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#E3E3E0"
            android:text="1"
            android:textSize="18sp"
            android:id="@+id/mabrand"
            android:fontFamily="@font/lato_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bk_them">

        <LinearLayout
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Tên hãng điện thoại"
                android:textSize="18sp"
                android:textColor="#373b54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/txttenhangdt"
                android:layout_marginLeft="10dp"
                android:hint="Tên hãng điện thoại"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/buttonLuuhang"
            android:layout_gravity="center"
            android:layout_width="365dp"
            android:background="@drawable/button_dn"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:text="Lưu" />


    </LinearLayout>



</LinearLayout>