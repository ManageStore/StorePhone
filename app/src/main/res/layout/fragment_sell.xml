<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"
    tools:context=".ui.sell.SellFragment">

    <LinearLayout
        android:id="@+id/customerlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="#ffff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_person"
            android:gravity="center|left" />

        <TextView
            android:id="@+id/nameCustomerOrder"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Chọn Khách Hàng"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_next"
                android:gravity="center|right" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/productlist"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"

        android:background="#fff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_playlist_add"
            android:gravity="center|left" />

        <TextView

            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Chọn Sản Phẩm"
            android:textColor="@color/black"


            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_next"
                android:gravity="center|right" />

        </RelativeLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="407dp"
        android:layout_marginTop="130dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_order_24"
            android:gravity="center|left" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="5dp"
            android:text="Bán Trực Tiếp"
            android:textColor="@color/black"

            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/tongorder01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center|right"
                android:text="0đ"
                android:textColor="@color/black"
                android:textSize="16dp" />

        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/thanhtoanbtn"
        android:layout_width="match_parent"
        android:layout_height="55dp"


        android:layout_alignParentBottom="true"
        android:layout_marginTop="677dp"
        android:background="#60BA62"
        android:gravity="center"
        android:text="Thanh Toán"
        android:textColor="@color/white"
        android:textSize="18dp" />


</RelativeLayout>