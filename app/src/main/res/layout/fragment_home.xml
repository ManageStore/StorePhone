<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEAEA"
    tools:context=".ui.home.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/home_customer">

            <TextView

                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="KHÁCH HÀNG"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/SoLuongKH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:background="@drawable/home_product">

            <TextView

                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="SẢN PHẨM"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/SoLuongSP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Sản Phẩm Bán Chạy"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@drawable/customer_item_bc">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btnSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo Số Lượng"
                android:textColor="#2060CD"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/btnDoanhThu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Theo Doanh Thu"
                />



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="504dp"
            android:layout_marginTop="10dp"
            android:background="#EFEAEA"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </LinearLayout>



</LinearLayout>