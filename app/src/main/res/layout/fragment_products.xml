<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/swipe"
    tools:context=".ui.goods.ProductsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/id_search_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/background_edit"
                android:drawableLeft="@drawable/ic_seach"
                android:drawablePadding="3dp"
                android:elevation="3dp"
                android:hint="Tìm kiếm theo tên hoặc mã sp"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="THƯƠNG HIỆU"
                android:fontFamily="@font/lato_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="15dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="15sp"
                android:textColor="#0357FF"
                android:text="THÊM"
                android:id="@+id/tvaddBrandProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_hangdienthoai"
            android:layout_margin="5dp"
            android:background="#ECEFF1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:weightSum="1"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="SẢN PHẨM"
                android:fontFamily="@font/lato_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginRight="15dp"
                android:fontFamily="@font/lato_bold"
                android:textSize="15sp"
                android:textColor="#0357FF"
                android:text="THÊM"
                android:id="@+id/tvAddProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_dienthoai"
            android:layout_margin="5dp"
            android:background="#ECEFF1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>