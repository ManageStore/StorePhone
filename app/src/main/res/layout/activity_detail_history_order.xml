<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical"

    tools:context=".ui.history.ViewDetailsHistoryOrder">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarbrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#32C3A6"
        app:title="Chi Tiết Đơn Hàng" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khách Hàng"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:gravity="center|left"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>



        <TextView
            android:id="@+id/TenKH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10dp"
            android:background="@color/white"
            android:text="Chọn Khách Hàng"
            android:textColor="@color/black"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="10dp"
            android:layout_marginTop="2dp"
            android:background="@color/white"
            android:text="0339045945"
            android:textColor="@color/black"
            android:textSize="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi Tiết Đơn Hàng"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:textSize="15dp"
        android:layout_marginTop="2dp"

        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|left"


            android:text="Tổng Tiền Hàng "
            android:textColor="@color/black"
            android:textSize="16dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:gravity="center|left"
                android:text="10000d"
                android:textColor="#1EA114"
                android:textSize="16dp" />

        </RelativeLayout>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="322dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />







</LinearLayout>