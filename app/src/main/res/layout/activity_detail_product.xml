<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.goods.ViewDetailProduct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#60BA62"
        app:titleTextColor="@color/white"

        app:title="Chi Tiết Sản Phẩm" />

    <ImageView
        android:id="@+id/imgProduct"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="400dp"
        android:padding="40dp"
        android:src="@drawable/iphone13" />

    <TextView
        android:id="@+id/updateImg"
        android:textColor="#2060CD"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="-35dp"
        android:text="@string/updateImage"
        android:textSize="16sp"
        android:fontFamily="@font/lato_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:text="Tên điện thoại"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgProduct" />

        <EditText
            android:id="@+id/detail_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:background="@null"
            android:focusableInTouchMode="false"

            android:text="iPhone 13"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="Số lượng"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/detail_soluong"
            android:layout_width="56dp"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:background="@null"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/lato_regular"
            android:text="45"
            android:textSize="21sp" />

        <TextView
            android:textColor="#FFFFFF"
            android:focusableInTouchMode="false"
            android:id="@+id/tvMasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/lato_regular"
            android:text="4"
            android:textSize="21sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_width="140dp"
            android:text="Giá Nhập"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <EditText
            android:background="@null"
            android:focusableInTouchMode="false"
            android:id="@+id/detail_gianhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/lato_regular"
            android:text="5000"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView6"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_width="140dp"
            android:text="Giá Bán"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:background="@null"
            android:focusableInTouchMode="false"
            android:id="@+id/detail_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10000"
            android:textSize="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/deletePr"

        android:background="@drawable/button_dn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"


        android:text="Xóa"
        android:textColor="#ffffff"

        android:layout_width="match_parent"
        android:layout_height="50dp"/>

</LinearLayout>